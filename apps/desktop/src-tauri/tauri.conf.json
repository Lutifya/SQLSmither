{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app",
  "version": "0.1.0",
  "identifier": "com.stefanoquartuccio.tauri-app",
  "build": {
    "beforeDevCommand": "cd ../backend && python -m uvicorn app.main:app --reload --port 8000",
    "beforeBuildCommand": "cd ../backend && pyinstaller backend.spec",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../desktop/dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-app",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/backend"]
  }
}
